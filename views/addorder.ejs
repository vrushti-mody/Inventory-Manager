            <main class="content">
				<div class="container-fluid p-0">
					<h1 class="h3 mb-3">Add Order</h1>
					<div class="row">
						<div class="col-md-12">
							<div class="card">
								<div class="card-header">
									<h5 class="card-title">Enter Order</h5>
									<h6 class="card-subtitle text-muted">Fill in the details to obtain the bill for an order</h6>
								</div>
								<div class="card-body">
									<form action="/orders/addorder" method="POST">
										<div class="field_wrapper ">
										<div class="form-row ">
											<div class="form-group col-md-12">
												<label for="inputZip">Name</label>
												<input type="text" name="name" class="form-control" id="name" required />
                                            </div>   
											<div class="form-group col-md-6">
												<label for="inputState">Item</label>
												<select id="inputState" name="item" class="form-control" required >
													<% for (i=0;i<items.length; i++){%>
														<option ><%- items[i].itemname %></option>
													<% } %>
                                                </select>
											</div>
											<div class="form-group col-md-6">
												<label for="inputZip">Quantity</label>
												<input type="number" name="quantity" class="form-control" id="quantity" required />
                                            </div>   
										</div>
									</div>
									<button type="button" class="btn btn-primary add_button">Add</button>
										<button type="submit" class="btn btn-primary ">Submit</button>
									</form>
								</div>
							</div>
						</div>		
					</div>
				</div>
			</main>

			<footer class="footer">
				<div class="container-fluid">
					<div class="row text-muted">
						<div class="col-6 text-left">
							<p class="mb-0">
								<a href="/" class="text-muted"><strong>Manage.in</strong></a> &copy;
							</p>
						</div>
						<div class="col-6 text-right">
							<ul class="list-inline">
								<li class="list-inline-item">
									<a class="text-muted" href="#">Support</a>
								</li>
								<li class="list-inline-item">
									<a class="text-muted" href="#">Help Center</a>
								</li>
								<li class="list-inline-item">
									<a class="text-muted" href="#">Privacy</a>
								</li>
								<li class="list-inline-item">
									<a class="text-muted" href="#">Terms</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</footer>
		</div>
